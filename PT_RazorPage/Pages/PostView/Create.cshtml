@page
@model PT_RazorPage.Pages.PostView.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Post</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Post.PostContent" class="control-label"></label>
                <input asp-for="Post.PostContent" class="form-control" />
                <span asp-validation-for="Post.PostContent" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Post.PostTitle" class="control-label"></label>
                <input asp-for="Post.PostTitle" class="form-control" />
                <span asp-validation-for="Post.PostTitle" class="text-danger"></span>
            </div>

            <!-- Image Upload Field -->
            <div class="form-group">
                <label asp-for="PostImg" class="control-label">Upload Image</label>
                <input type="file" asp-for="PostImg" class="form-control" />
                <span asp-validation-for="PostImg" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>

    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
