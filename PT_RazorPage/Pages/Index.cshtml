@page
@model IndexModel
@{
    ViewData["Title"] = "Personal Trainer Profile";
}

<div class="container my-5">
    <div class="card">
        <div class="card-header text-center">
            <h2>Personal Trainer Profile</h2>
        </div>
        <div class="card-body">
            <div class="row">
                <!-- Profile Image -->
                <div class="col-md-4 text-center">
                    <img src="/Image/Load?filePath=@Model.PersonalTrainer.PtImg" alt="Profile Image" class="img-fluid rounded-circle" style="width: 200px; height: 200px;">
                </div>

                <!-- Profile Information -->
                <div class="col-md-8">
                    <h4>@Model.PersonalTrainer.PtName</h4>
                    <p class="text-muted">@Model.PersonalTrainer.PtEmail</p>

                    <dl class="row">
                        <dt class="col-sm-4">Username</dt>
                        <dd class="col-sm-8">@Model.PersonalTrainer.PtUsername</dd>

                        <dt class="col-sm-4">Age</dt>
                        <dd class="col-sm-8">@Model.PersonalTrainer.PtAge?.ToString("yyyy-MM-dd")</dd>

                        <dt class="col-sm-4">Address</dt>
                        <dd class="col-sm-8">@Model.PersonalTrainer.PtAddress</dd>

                        <dt class="col-sm-4">Phone</dt>
                        <dd class="col-sm-8">@Model.PersonalTrainer.PtPhone</dd>

                        <dt class="col-sm-4">Salary</dt>
                        <dd class="col-sm-8">@Model.PersonalTrainer.PtSalary</dd>
                    </dl>

                    <!-- Edit and Logout buttons next to each other -->
                    <div class="d-flex justify-content-center mt-4">
                        <a asp-page="/EditProfile" asp-route-id="@Model.PersonalTrainer.PtId" class="btn btn-primary mr-3">Edit Profile</a>
                        <form method="post" asp-page-handler="Logout">
                            <button type="submit" class="btn btn-danger">Logout</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
